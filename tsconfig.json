{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "drizzle-orm/pg-core": ["node_modules/drizzle-orm/pg-core"]
    },
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "config/firebase.js",
    "global.d.ts",
    "routes/job.routes.js",
    "routes/job.routes.js",
    "routes/job.routes.js"
  ],
  "exclude": ["node_modules"]
}
